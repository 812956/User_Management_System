<% include("../layouts/header.ejs") %>

<style>
   body {
       font-family: Arial, sans-serif;
       background-color: #f2f2f2;
       margin: 50px auto;
       max-width: 800px;
       padding: 20px;
   }
   h1 {
       text-align: center;
       color: #333;
   }
   table {
       width: 100%;
       border-collapse: collapse;
   }
   th, td {
       padding: 10px;
       border: 1px solid #ccc;
       text-align: center;
   }
   th {
       background-color: #007bff;
       color: #fff;
   }
   tr:nth-child(even) {
       background-color: #f2f2f2;
   }
   td p {
       margin: 0;
   }
   a {
       display: inline-block;
       padding: 5px 10px;
       background-color: #007bff;
       color: #fff;
       text-decoration: none;
       border-radius: 5px;
       margin-right: 10px;
   }
   a:hover {
       background-color: #0056b3;
   }
</style>

<h1>Dashboard</h1>

<a href="/admin/new-user">Add New User</a>
<br><br>

<table width="50%">
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>Verified</th> 
        <th>Actions</th>
    </tr>

   <%
      if(users.length > 0) {
         for(let i=0;i<users.length;i++){
            %>
            <tr>
             <td> <%= users[i].name %></td>
             <td> <%= users[i].email %></td>
             <td> <%= users[i].mobile %> </td>
             <td> <%
                 if(users[i].is_varified == 0){
                   %>
                     <p>Not Verified</p>
                   <%
                 }
                 else{
                    %>
                    <p>Verified</p> 
                    <%
                 }
                
                %> </td>
                <td>
                    <a href="/admin/edit-user?id=<%= users[i]._id%>">Edit</a>
                    <a href="/admin/delete-user?id=<%= users[i]._id%>">Delete</a>
                </td>
            </tr>
            <%
            
         }

      }else {
          %>
             <tr>
                <td colspan="5">Users Not Found</td>
             </tr>
          <%
      }
   %>

</table>
<br>
<a href="/admin/home">Go to Home</a>

<% include("../layouts/footer.ejs") %>

