<% include('../layouts/header.ejs') %>
<style>
  body {
      font-family: Arial, sans-serif;
      background-color: #f2f2f2;
      margin: 0;
      padding: 0;
  }
  form {
      max-width: 400px;
      margin: 0 auto;
      background-color: #fff;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }
  input[type="text"], input[type="email"] {
      width: calc(100% - 20px);
      padding: 10px;
      margin: 10px 0;
      border-radius: 5px;
      border: 1px solid #ccc;
      box-sizing: border-box;
  }
  input[type="submit"] {
      width: 100%;
      padding: 10px;
      margin-top: 20px;
      border-radius: 5px;
      border: none;
      background-color: #007bff;
      color: #fff;
      cursor: pointer;
      transition: background-color 0.3s;
  }
  input[type="submit"]:hover {
      background-color: #0056b3;
  }
</style>

<form action="" method="POST" enctype="multipart/form-data">
  
  <input type="hidden" name="user_id" value="<%= user._id %>">
  <br><br>
  <input type="text" name="name" value="<%= user.name %>" placeholder="Enter Name" required>
  <br><br>
  <input type="email" name="email" value="<%= user.email %>" placeholder="Enter Email" required>
  <br><br>
  <input type="text" name="mon" value="<%= user.mobile %>" placeholder="Enter Mobile" required>
   <br><br>
  <input type="submit" value="Update Profile"> 

</form>

<% include('../layouts/footer.ejs') %>